{
  "name": "masochist-experimental",
  "version": "0.0.1",
  "description": "Website infrastructure for overengineers",
  "main": "index.js",
  "author": "Greg Hurrell <greg@hurrell.net>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "*",
    "@types/node": "*",
    "jest": "*",
    "prettier": "*",
    "ts-jest": "*",
    "typescript": "*"
  },
  "scripts": {
    "build": "tsc --build",
    "build:clean": "tsc --build --clean",
    "build:dry": "tsc --build --dry",
    "build:force": "tsc --build --force",
    "build:watch": "tsc --build --watch",
    "format": "prettier --write '**/*.{js,json,md,ts}'",
    "format:check": "prettier --check '**/*.{js,json,md,ts}'",
    "test": "jest"
  }
